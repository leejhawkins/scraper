<div class="container">

    <div class="row">
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h4 class="display-4">Donald Trump Fact Check</h4>
                <p class="lead"></p>
                <button type="button" class="btn btn-primary btn-lg"></button>
            </div>
        </div>
    </div>

    <div class="row">
        <ul class="collection col-7">
            {{#each articles}}
            <li class="collection-item avatar">
                <img src="{{this.rating}}" alt="" class="circle">
                <div class="title">Claim:{{this.title}} </div>
                <button type="button" data-id={{this._id}} class="btn-small btn-secondary float-right note-btn">View
                    Summary</button>
            </li>
            {{/each}}

        </ul>
        <div id="notes" class="col-5 pin-top" style="top:0px;">

        </div>

    </div>
</div>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="/js/app.js"></script>


</body>